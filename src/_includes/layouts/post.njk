{% extends "layouts/base.njk" %}

{% block content %}
<article class="post">
  {% if image %}
  {% set altText = alt or title %}
  {% set imageOptions = { "src": image, "alt": altText } %}
  <div class="featured-image">
    <div class="image-wrapper">
      {% optimizedImage imageOptions %}
    </div>
  </div>
{% endif %}

  <h1 class="post-title">{{ title }}</h1>
  <p class="post-meta">Posted on {{ date | date("MMMM dd, yyyy") }}</p>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <div class="post-footer">
    <a href="/" class="back-link">‚Üê Back to Collection</a>
  </div>
</article>
{% endblock %}