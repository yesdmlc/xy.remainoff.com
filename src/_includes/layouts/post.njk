<article class="post-entry">
  <h1>{{ title }}</h1>

  {% if cover_image %}
    <img src="{{ cover_image }}" alt="{{ title }}" class="post-cover" loading="lazy">
  {% endif %}

  <p class="post-meta">
    {{ date | readableDate }} Â· {{ access_level | capitalize }}
  </p>

  <div class="post-content">
    {{ content | safe }}
  </div>
</article>