{# 
  Template: Post Archive
  Purpose: Renders the /posts/ page with a list of all blog posts.
  Source: Uses the "posts" collection defined in .eleventy.js
  Output: /posts/index.html
#}

<section class="post-archive">
  <header class="archive-header">
    <h1>Unfolding Thoughts</h1>
    <p>Personal entries. Some quiet, some visual. All part of the process.</p>
  </header>

  <div class="post-card-list">
    {% for post in collections.posts | reverse %}
      {% if post.url != page.url %}
        <article class="post-card">
          {% if post.data.cover_image %}
            <a href="{{ post.url }}">
              <img src="{{ post.data.cover_image }}" alt="{{ post.data.title }}" class="post-card-image" loading="lazy">
            </a>
          {% endif %}
          <div class="post-card-content">
            <h2>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <p class="post-card-date">{{ post.date | readableDate }}</p>
            <p class="post-card-excerpt">
              {{ post.templateContent | striptags | truncate(220, true, "â€¦") }}
            </p>
          </div>
        </article>
      {% endif %}
    {% endfor %}
  </div>
</section>
