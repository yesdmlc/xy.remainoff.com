---
layout: layouts/base.njk
title: All Posts
eleventyExcludeFromCollections: true
permalink: "/posts/"
---

<h1>All Posts</h1>

{% set supabasePosts = publicSupabasePosts %}
{% set markdownPosts = collections.posts | filterPublicMarkdownPosts %}
{% set allPosts = (supabasePosts | merge(markdownPosts)) | sortByDate %}

<section class="post-feed">
  {% for post in allPosts %}
    {% set isFirstThree = loop.index0 < 3 %}
    {% set data = post.data or post %}
    <article class="post-entry">
      <a href="{{ post.url or '/posts/' + data.slug + '/' }}" class="post-link">
        <div class="post-card">
          <div class="post-thumb-wrapper">
            {% if data.signed_cover_image_url or data.image %}
              <img
                src="{{ data.signed_cover_image_url or data.image }}"
                alt="{{ data.alt or data.title }}"
                class="post-cover"
                {% if not isFirstThree %}loading="lazy"{% endif %}
              />
            {% endif %}
          </div>
          <div class="post-caption">
            {% if data.caption %}
              <p>{{ data.caption }}</p>
            {% endif %}
            <small>
              {% if data.date %}
                {{ data.date | date("MMM d, yyyy") }}{% if data.mood %} Â· {{ data.mood }}{% endif %}
              {% else %}
                No date
              {% endif %}
            </small>
          </div>
        </div>
      </a>
    </article>
  {% endfor %}
</section>

<script>
  window.SUPABASE_CONFIG = JSON.parse('{{ "" | supabaseConfig | safe }}');
</script>
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.js" defer></script>
<script src="/assets/auth.js" defer></script>