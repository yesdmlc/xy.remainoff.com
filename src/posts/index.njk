---
layout: base.njk
title: All Posts
eleventyExcludeFromCollections: true
permalink: "/posts/"
---

<h1>All Posts</h1>

<section class="post-feed">
  {% for post in publicSupabasePosts %}
  <article class="post-entry">
    <a href="{{ post.url }}" class="post-link">
      <div class="post-card">
        <div class="post-thumb-wrapper">
          <img
            src="{{ post.signed_cover_image_url }}"
            alt="{{ post.alt or post.title }}"
            class="post-cover"
            loading="lazy"
          />
        </div>
        <div class="post-caption">
          <p>{{ post.caption }}</p>
          <small>{{ post.date | date("yyyy-MM-dd") }}{% if post.mood %} Â· {{ post.mood }}{% endif %}</small>
        </div>
      </div>
    </a>
  </article>
  {% endfor %}
</section>

<script>
  window.SUPABASE_CONFIG = JSON.parse('{{ "" | supabaseConfig | safe }}');
</script>
<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/dist/umd/supabase.js" defer></script>
<script src="/assets/auth.js" defer></script>